<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debts_frag_navigation"
    app:startDestination="@id/allDebtsFragment">

    <fragment
        android:id="@+id/allDebtsFragment"
        android:name="com.example.debts.ui.allDebts.AllDebtsFragment"
        android:label="fragment_debts"
        tools:layout="@layout/fragment_all_debts" >
        <action
            android:id="@+id/action_allDebtsFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/todayDebtsFragment"
        android:name="com.example.debts.ui.todayDebts.TodayDebtsFragment"
        android:label="fragment_today_debts"
        tools:layout="@layout/fragment_today_debts" >
        <action
            android:id="@+id/action_todayDebtsFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.debts.ui.searchDebts.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/neDebtsFragment"
        android:name="com.example.debts.ui.neDebts.NeDebtsFragment"
        android:label="fragment_ne_debts"
        tools:layout="@layout/fragment_ne_debts" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.debts.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
</navigation>